<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="edu.ucsb.cs.cs185.foliostation.editentry.EditInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/edit_info_cover_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/back1" />

                <TextView
                    android:id="@+id/edit_title_hint"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/edit_info_cover_image"
                    android:fontFamily="sans-serif"
                    android:hint="Title"
                    android:paddingLeft="4dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/colorGrayTransparent"
                    android:textSize="12dp" />


                <EditText
                    android:id="@+id/edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/edit_info_cover_image"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:hint="Name Your Project"
                    android:inputType="textPersonName"
                    android:paddingLeft="40dp"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/edit_tags_hint"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/edit_info_cover_image"
                    android:fontFamily="sans-serif"
                    android:hint="Tags"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/colorGrayTransparent"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/edit_tags"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/edit_title"
                    android:layout_toRightOf="@id/edit_info_cover_image"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:layout_marginLeft="10dp"
                    android:hint="Tags, Comma, Separated"
                    android:inputType="textPersonName"
                    android:paddingLeft="40dp"
                    android:paddingTop="8dp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/edit_description_hint"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Description"
                android:fontFamily="sans-serif"
                android:paddingTop="44dp"
                android:paddingLeft="4dp"
                android:textColor="@color/colorGrayTransparent"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/edit_description"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ems="10"
                android:gravity="top"
                android:hint="Write Your Description"
                android:inputType="textPersonName"
                android:fontFamily="sans-serif"
                android:paddingTop="40dp"
                android:paddingLeft="70dp"
                android:layout_toRightOf="@id/edit_description_hint"
                android:textColor="@color/black"
                android:textSize="16dp" />

            </FrameLayout>



        </LinearLayout>

    </ScrollView>

</FrameLayout>
